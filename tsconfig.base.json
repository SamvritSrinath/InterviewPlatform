{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2017",
    "module": "esnext",
    "lib": ["ES2020", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@interview-platform/ui": ["packages/ui/src/index.ts"],
      "@interview-platform/utils": ["packages/utils/src/index.ts"],
      "@interview-platform/config": ["packages/config/src/index.ts"],
      "@interview-platform/supabase-client": ["packages/supabase-client/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

